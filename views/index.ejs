<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Task Manager</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container mt-5">
    <h1 class="text-center mb-4">ğŸ—‚ï¸ Task Manager</h1>
    <form action="/add" method="POST" class="d-flex mb-3">
      <input type="text" name="title" class="form-control me-2" placeholder="Enter new task" required>
      <button class="btn btn-primary">Add</button>
    </form>
    <table class="table table-bordered bg-white shadow-sm">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% tasks.forEach(task => { %>
        <tr>
          <td><%= task.id %></td>
          <td><%= task.title %></td>
          <td><%= task.completed ? "âœ… Done" : "ğŸ•“ Pending" %></td>
          <td>
            <form action="/update/<%= task.id %>" method="POST" style="display:inline;">
              <button class="btn btn-success btn-sm">Toggle</button>
            </form>
            <form action="/delete/<%= task.id %>" method="POST" style="display:inline;">
              <button class="btn btn-danger btn-sm">Delete</button>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
